    <description>Android support plugin for Apache NetBeans</description>
    
    <!-- Developers -->
    <developers>
        <developer>
            <id>Arsi</id>
            <name>Ivan Friedl√§nder</name>
            <email>arsi@arsi.sk</email>
        </developer>
    </developers>
    <modules>
        <module>nbandroid.gradle.tooling</module>
        <module>nbandroid.gradle.libs</module>
        <module>nbandroid.gradle.spi</module>
        <module>nbandroid.gradle.impl</module>
        <module>nbandroid.ext.libs</module>
        <module>nbandroid.ext.libs.android</module>
        <module>nbandroid.ext.src</module>
        <module>nbandroid.maven</module>
